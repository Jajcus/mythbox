#!/bin/bash
find . -name "*.pyc" | xargs rm -fv
find . -name "*.pyo" | xargs rm -fv

tar czvf mythbox.tar.gz \
    --exclude=*.log \
    --exclude=*.gz \
    --exclude=".svn" \
    --exclude=".project" \
    --exclude=".svnignore" \
    --exclude=".pydevproject" \
    --exclude=".settings" \
    --exclude=ondemandconfig.ini \
    --exclude=doc \
    --exclude="trac" \
    --exclude=./resources/lib/nose \
    --transform s/^./MythBox/g .
    