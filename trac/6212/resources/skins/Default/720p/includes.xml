<includes>

    <include name="myPos">
        <posx>0</posx>
        <posy>0</posy>
    </include>
    
    <include name="myButton">
        <control type="button">
            <posx>100</posx>
            <posy>300</posy>
            <width>300</width>
            <height>50</height>
            <align>left</align>
            <font>font12</font>
            <visible>true</visible>
            <label>I am button from includes.xml</label>
        </control>
    </include>
    
</includes> 