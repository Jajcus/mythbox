<!--
    These are the controls to display Program Details for a row selected in
    the list.
-->

<control>
    <description>info background</description>
    <id>info_bg</id>
    <type>image</type>
    <posX>(detail_x)</posX>
    <posY>(detail_y)</posY>
    <width>(detail_w)</width>
    <height>(detail_h)</height>
    <texture>shade_25.png</texture>
</control>
<control>
    <description>show title label</description>
    <id>show_title_lbl</id>
    <type>label</type>
    <posX>(dt_title_l_x)</posX>
    <posY>(dt_title_l_y)</posY>
    <width>(dt_title_l_w)</width>
    <height>(dt_title_l_h)</height>
    <font>(label_font)</font>
    <label>40</label>
    <textcolor>0xffffffff</textcolor>
</control>
